<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tabiyat" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_main</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_main</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/ivory_color</item>
        <!-- Customize your theme here.   Theme.MaterialComponents.DayNight.NoActionBar -->
    </style>
    <style name="MaterialTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_main</item>
        <item name="colorPrimaryVariant">@color/middle_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_main</item>
        <item name="colorSecondaryVariant">@color/middle_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here.   Theme.MaterialComponents.DayNight.NoActionBar -->
    </style>



    <style name="MainTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/avenir_book </item>
        <item name="android:textSize">@dimen/mainTextSize</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SecondaryTextStyle">
        <item name="android:fontFamily">@font/avenir_book </item>
        <item name="android:textSize">@dimen/secondaryTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
<!--        <item name="android:layout_margin">@dimen/margin_10</item>-->
    </style>
    <style name="DescriptionTextStyle">
        <item name="android:fontFamily">@font/avenir_regular </item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="ToolbarTextStyle">
        <item name="android:fontFamily">@font/avenir_regular </item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LikedSortStyle">
        <item name="android:fontFamily">@font/avenir_regular </item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:elevation">4dp</item>


    </style>



    <style name="CardDepTextStyle">
        <item name="android:fontFamily">@font/avenir_book </item>
        <item name="android:textSize">@dimen/cardDepTextSize</item>
        <item name="android:textColor">@color/green_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
<!--        <item name="android:layout_margin">@dimen/margin_10</item>-->
    </style>
    <style name="EditTextLoginStyle">
        <item name="android:fontFamily">@font/avenir_book </item>
        <item name="android:padding">@dimen/margin_10</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/dark_gray</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/avenir_book </item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/rounded_btn_background</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ItemProfileStyle">
        <item name="android:fontFamily">@font/avenir_book </item>
        <item name="android:textColor">@color/profile_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="MyStyle.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="fontFamily">@font/avenir_book</item>
        <item name="boxStrokeColor">@color/error_color</item>
        <item name="boxStrokeWidth">5dp</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/dark_gray</item>
    </style>


    <style name="SearchViewStyle">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>